<p id="notice"><%= notice %></p>

<h1>Title: <%= @painting.title %></h1>
<h2>Artist: <%= @painting.artist_name %></h2>
<h2>Country: <%= @painting.country %></h2>

<% unless @painting.comments.empty? %>
  <table>
    <tr>
      <th style="width: 50%; text-align: left">Comment</th>
      <th style="text-align: left">Author</th>
    </tr>
    <% @painting.comments.each do |comment| %>
      <tr>
        <td><%= comment.message %></td>
        <td><%= comment.user.name %></td>
        <td><%= link_to 'Show', painting_comment_path(comment.painting, comment) %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>This painting currently has no comments.</p>
<% end %>

<%= link_to 'Add a comment', new_painting_comment_path(@painting) %>
